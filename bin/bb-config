#!/usr/bin/env ruby

require 'json'
require 'os'

PLATFORM ||= (OS.mac? && 'macos')
PLATFORM ||= (OS.linux? && 'linux')

INCLUDE_PATH = File.expand_path(File.join(File.dirname(__FILE__), '..', 'src', 'runtime'))
LIB_PATH = File.expand_path(File.join(File.dirname(__FILE__), '..', '_release', 'lib'))

IDENTIFIER_REGEX = /[A-Za-z0-9]+/

configs = Dir.glob(File.join(LIB_PATH, '*/*.config.json')).inject({}) do |cfgs, path|
  _, platform, rt = path.match(/(#{IDENTIFIER_REGEX})\/(#{IDENTIFIER_REGEX})\.config\.json$/).to_a
  cfgs[platform] ||= {}
  cfgs[platform][rt] = JSON.parse(File.open(path).read)
  cfgs
end

if configs[PLATFORM].nil?
  $stderr.puts "No runtimes for #{PLATFORM}."
  exit 1
end

RUNTIME = 'opengl'

config = configs[PLATFORM][RUNTIME] || configs[PLATFORM].first[0]

# puts JSON.pretty_generate(config['modules'])

module_libs = []
system_libs = []

libs = config['modules'].map do |mod|
  module_libs << "-lbb.#{mod['id']}"

  system_libs << mod['links'].map do |lib|
    if lib =~ /(.*)\.framework$/
      "-framework #{$1}"
    else
      "-l#{lib}"
    end
  end.flatten
end
# module_libs << %w(-lstdutil -lvorbisfile -logg -lassimp -lfreeimage -lfreeimage -ljpeg -lopenexr -lopenjpeg -lpng -lraw -ltiff4 -lwebp -lzlib)
#
# system_libs = %w(-lm)
# system_libs << %w(-framework OpenAL -framework CoreAudio -framework IOKit -framework OpenGL -framework CoreVideo -framework Cocoa) if PLATFORM == 'macos'
# system_libs << %w(-lGL -lGLU) if PLATFORM == 'linux'

puts "-Wno-int-conversion -I#{INCLUDE_PATH} -DBBMAIN -L#{File.join(LIB_PATH, PLATFORM)} -lruntime.#{RUNTIME} -lstub #{module_libs.join(' ')} #{module_libs.join(' ')} #{system_libs.join(' ')}"
